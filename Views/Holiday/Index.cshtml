@model UCOMProject.Models.HolidayDetailTableViewModel
@using UCOMProject.Methods
@{
    ViewBag.Title = "審核進度";
}

<div id="app" class="mt-5" v-cloak>
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <ul class="nav nav-pills mt-5 mb-2" id="pills-tab" role="tablist" style="justify-content:center">
            <li class="nav-item border-bottom-warning funPos" role="presentation">
                <button class="nav-link active"
                        id="pills-home-tab"
                        data-toggle="pill"
                        data-target="#pills-home"
                        type="button"
                        role="tab"
                        aria-controls="pills-home"
                        aria-selected="true">
                    待審核
                </button>
                <span class="badge badge-warning badge-counter fun funWait" v-show="allowWait.length">{{allowWait.length}}</span>
            </li>
            <li class="nav-item border-bottom-danger funPos" role="presentation">
                <button class="nav-link"
                        id="pills-profile-tab"
                        data-toggle="pill"
                        data-target="#pills-profile"
                        type="button"
                        role="tab"
                        aria-controls="pills-profile"
                        aria-selected="false">
                    退回
                </button>
                <span class="badge badge-danger badge-counter fun funBack" v-show="allowBack.length">{{allowBack.length}}</span>
            </li>
        </ul>

        <div class="tab-content" id="pills-tabContent">
            <!--allowWait table-->
            <div class="tab-pane fade show active funPos" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="funBtn">
                    <template v-if="isAll">
                        <div class="btn btn-sm btn-danger" v-show="isAll" @@click="delChecked">全部刪除</div>
                    </template>
                    <template v-else>
                        <div class="btn btn-sm btn-danger" v-show="isChecked" @@click="delChecked">已選擇({{isChecked}}筆)刪除</div>
                    </template>
                </div>

                <div class="row card shadow">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="AllowWait" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th v-show="allowWait.length">
                                            <div class="custom-control custom-checkbox text-center">
                                                <input type="checkbox" class="custom-control-input" id="checkAllTop" v-model="isAll">
                                                <label class="custom-control-label" for="checkAllTop">全選</label>
                                            </div>
                                        </th>
                                        <th>編號</th>
                                        <th>申請人資訊</th>
                                        <th>假別</th>
                                        <th>申請日期</th>
                                        <th>休假期間</th>
                                        <th>總計天數</th>
                                        <th>事由</th>
                                        <th>證明</th>
                                        <th>審核單位</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="data in allowWait" :key="data.id" :class="{'checkedColor':data.checked}">
                                        <td v-show="allowWait.length">

                                            <div class="custom-control custom-checkbox text-center">
                                                <input type="checkbox" class="custom-control-input" :id="'defaultUnchecked' + data.id" v-model="data.checked">
                                                <label class="custom-control-label" :for="'defaultUnchecked' + data.id"></label>
                                            </div>
                                        </td>
                                        <td>h00{{data.id}}</td>
                                        <td>
                                            {{data.branch}}
                                            <template v-if="data.shift == 'A班'">
                                                <span class="badge badge-info">
                                                    {{data.shift}}
                                                </span>
                                            </template>
                                            <template v-else>
                                                <span class="badge badge-secondary">
                                                    {{data.shift}}
                                                </span>
                                            </template>
                                            <br />
                                            {{data.eId}}
                                            {{data.name}}
                                        </td>
                                        <td>{{data.title}}</td>
                                        <td>{{formatDate(data.applyDate)}}</td>
                                        <td>{{formatDate(data.beginDate)}} ~ <br />{{formatDate(data.endDate)}}</td>
                                        <td class="text-danger font-weight-bold">{{data.usedDays}}天</td>
                                        <td>{{data.remark}}</td>
                                        <td v-if="data.prove">
                                            <button type="button" class="btn btn-outline-danger btn-sm" data-toggle="modal" :data-target="'#exampleModalCenter'+data.id ">
                                                證明
                                            </button>
                                            <div class="modal fade" :id="'exampleModalCenter'+data.id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLongTitle">{{data.name}} - 請假事由 : {{data.remark}}</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div v-for="img in data.proveImg" :key="img">
                                                                <img :src="'/Uploads/' +img" alt="Alternate Text" style="width:100%;max-height:1000px" />
                                                                <hr />
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td v-else>無需證明</td>
                                        <td>
                                            <span class="badge badge-warning">
                                                {{data.head.branch}}主管
                                            </span>
                                            <br />
                                            {{data.head.name}}({{data.head.englishName}})
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!--allowBack table-->
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <div class="row card shadow">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="allowBack" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>功能</th>
                                        <th>退回原因</th>
                                        <th>編號</th>
                                        <th>部門資訊</th>
                                        <th>假別</th>
                                        <th>休假期間</th>
                                        <th>總計天數</th>
                                        <th>事由</th>
                                        <th>證明</th>
                                        <th>審核單位</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="data in allowBack" :key="data.id">
                                        <td>
                                            <a class="btn btn-outline-info">修改</a>
                                            <a class="btn btn-danger" v-on:click="delBackCheck(data.id)">刪除</a>
                                        </td>
                                        <td class="text-danger font-weight-bold">{{data.reason}}</td>
                                        <td>h00{{data.id}}</td>
                                        <td>
                                            <div>
                                                {{data.branch}}
                                                <span class="badge badge-info">
                                                    {{data.shift}}
                                                </span>
                                            </div>
                                            <div>
                                                {{data.eId}}
                                                {{data.name}}
                                            </div>
                                        </td>
                                        <td>{{data.title}}</td>
                                        <td>{{formatDate(data.beginDate)}} ~ <br />{{formatDate(data.endDate)}}</td>
                                        <td class="text-danger font-weight-bold">{{data.usedDays}}天</td>
                                        <td>{{data.remark}}</td>
                                        <td v-if="data.prove">
                                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" :data-target="'#exampleModalCenter'+data.id ">
                                                證明
                                            </button>
                                            <div class="modal fade" :id="'exampleModalCenter'+data.id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLongTitle">{{data.name}} - 請假事由 : {{data.remark}}</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div v-for="img in data.proveImg" :key="img">
                                                                <img :src="'/Uploads/' +img" alt="Alternate Text" style="width:100%;max-height:1000px" />
                                                                <hr />
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td v-else>無需證明</td>
                                        <td>
                                            <span class="badge badge-warning">
                                                {{data.head.branch}}主管
                                            </span>
                                            <br />
                                            {{data.head.name}}({{data.head.englishName}})
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script{
    <!-- Page level plugins -->
    <script src="~/Content/admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/admin/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script>
            $(document).ready(function () {
                $('#AllowWait').DataTable({
                    "searching": false,
                    "language": {
                        "emptyTable": "暫無休假資訊..",
                        "info": "顯示 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                        "infoEmpty": "顯示 0 至 0 項結果，共 0 項",
                        "paginate": {
                            "first": "第一頁",
                            "last": "最後一頁",
                            "next": "下一頁",
                            "previous": "上一頁"
                        }
                    }

                });
                $('#allowBack').DataTable({
                    "searching": false,
                    "language": {
                        "emptyTable": "暫無退回資訊..",
                        "info": "顯示 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                        "infoEmpty": "顯示 0 至 0 項結果，共 0 項",
                        "paginate": {
                            "first": "第一頁",
                            "last": "最後一頁",
                            "next": "下一頁",
                            "previous": "上一頁"
                        }
                    }
                });
            });

        const vm = new Vue({
            el: '#app',
            data: {
                source: {},
                allowBack: [],
                allowWait: [],
                employee: {},
                edit: false,
            },
            mounted() {
                this.source = @Html.Raw(ViewBag.Source);
                this.employee = this.source.employee;
                this.source.details.forEach(item => {
                    this.$set(item, 'checked', false);
                    switch (item.state) {
                        case 1:
                            this.allowWait.push(item)
                            break;
                        case 3:
                            this.allowBack.push(item)
                            break;
                        default:
                    }
                })
            },
            computed: {
                isChecked() {
                    return this.allowWait.reduce((acc, current) => {
                        return acc + (current.checked ? 1 : 0);
                    }, 0)
                },
                isAll: {
                    get() {
                        if (!this.allowWait.length) return false;
                        return this.isChecked === this.allowWait.length;
                    },
                    set(value) {
                        this.allowWait.forEach(item => {
                            item.checked = value;
                        })
                    }
                }
            },
            methods: {
                formatDate(date) {
                    moment.locale('zh-tw');
                    return moment(date).format('l');
                },
                delChecked() {
                    let data = [];
                    this.allowWait.forEach(item => {
                        if (item.checked) {
                            data.push(item.id);
                        }
                    });
                    if (!data.length) return;
                    Swal.fire({
                        title: `確定刪除${data.length}筆資料？`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonText: '刪除',
                        cancelButtonText: '取消',
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                    }).then((result) => {
                        if (result.isConfirmed) {
                            this.delData(data);
                        } else {
                            return;
                        }
                    })
                },
                delBackCheck(id) {
                    let data = [];
                    data.push(id);
                    Swal.fire({
                        title: `確定刪除編號h00${id}假單？`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonText: '刪除',
                        cancelButtonText: '取消',
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                    }).then((result) => {
                        if (result.isConfirmed) {
                            this.delData(data);
                        } else {
                            return;
                        }
                    })
                },
                delData(data) {
                    $.ajax({
                        type: 'post',
                        url: '@Url.Action("delete")',
                        data: JSON.stringify(data),
                        contentType: 'application/json',
                    }).done(result => {
                        if (result.isPass)
                            sAlert(result.msg);
                        else
                            eAlert(result.msg);
                        $(Swal.getConfirmButton()).click(function () {
                            $('body').loading();
                            setTimeout(function () {
                                window.location.href = '@Url.Action("index")';
                            }, 1500)
                        })
                    }).fail(error => {
                        console.log('error', error);
                    })
                },
            }
        })
    </script>
}

@section Style{
    <link href="~/Content/admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <style>
        img {
            width: 50px;
        }

        .checkedColor {
            background-color: rgba(100, 255, 50, 0.1);
        }

        .funPos {
            position: relative;
        }

        .fun {
            position: absolute;
        }

        .funWait {
            left: -10px;
            bottom: -4px;
            z-index: 10;
        }

        .funBack {
            right: -10px;
            bottom: -4px;
            z-index: 10;
        }

        .funBtn {
            position: absolute;
            left: 200px;
            top: 5%;
            z-index: 10;
        }
    </style>
}
